      .header {
        border-top: 1px solid black;
        padding-top: 5px;
        display: flex;
        align-items: center;
        gap: 50px;
        margin-bottom: 15px;
      }
      .header__left {
        display: flex;
        align-items: center;
        gap: 20px;
      }
      .header__right {
        align-self: flex-end;
        margin-bottom: 5px;
      }
      .icon {
        width: 40px;
      }
      .grid { 
        display: flex;
        justify-content: space-between;
        gap: 10px;
      }
      .main {
        background-color: #ddd9d9;
        height: 250px;
        width: 30%;
        position: relative;
        padding: 0 10px;
      }
      .main > div {
        margin-bottom: 10px;
      }
      .main:after {
        content: "";
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 40px 0 0 40px;
        border-color: transparent transparent transparent white;
        position: absolute;
        bottom: -2px;
        left: -2px;
      }
      .details {
        border: 1px solid gray;
        height: 250px;
        width: 70%;
        display: flex;
      }

      .details__left {
        width: 70%;
        border-right: 1px dashed black;
        height: 100%;
      }
      .details__right {
        width: 30%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
      .details__left--top,
      .details__left--bottom {
        height: 50%;
      }
      .details__left--top {
        border-bottom: 1px dashed black;
      }
      .details__left--bottom {
        display: flex;
        flex-shrink: 0;
      }
      .details__left--bottom > div {
        width: 50%;
      }
      .details__left--bottom__left {
        border-right: 1px dashed black;
      }

      .destination {
        display: flex;
        justify-content: space-between;
        flex-shrink: 0;
      }
      .destination > div {
        width: 50%;
      }

      
      
      .light {
        font-weight: 300;
      }
      .regular {
        font-weight: 400;
      }
      .normal {
        font-weight: 500;
      }
      .bold {
        font-weight: bold;
      }

      .shift-down {
        margin-bottom: 5px;
      }
      .shift-down-big {
        margin-bottom: 25px;
      }

      .nomargin {
        margin: 0;
      }

      .spacing {
        padding: 15px;
      }

      .light-gray {
        color: lightgray;
      }

      p {
        margin: 0;
      }
    </style>
